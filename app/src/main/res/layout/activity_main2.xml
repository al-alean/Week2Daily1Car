<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <EditText
        android:id="@+id/etYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Year" />

    <EditText
        android:id="@+id/etMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Make" />

    <EditText
        android:id="@+id/etModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Model" />

    <EditText
        android:id="@+id/etColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Color" />

    <EditText
        android:id="@+id/etEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Engine" />

    <EditText
        android:id="@+id/etTransmissionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TransmissionType" />

    <EditText
        android:id="@+id/etTitleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TitleStatus" />

    <Button
        android:id="@+id/btnPassInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Pass Info"
        android:textAllCaps="false" />

</LinearLayout>